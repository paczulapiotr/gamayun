@using Gamayun.Infrastucture.Command.Teacher
@model EditTopicCommandHandler.Command
@{
    ViewData["Title"] = "Edit Topic";
    var errors = ViewBag.Errors ?? Array.Empty<string>();
}

@await Html.PartialAsync("_PageHeader", "Topic Edit Page")

<hr />
<div class="container-fluid">
    <div class="jumbotron">
        @foreach (var error in errors)
        {
            <div class="alert alert-danger" role="alert">
                <strong>@error</strong>
            </div>
        }
        <form id="topic-form" asp-area="Teacher" asp-controller="Topic" asp-action="TopicEdit">
            <input hidden asp-for="Id" />
            <div class="row">
                <div class="col-lg-6 form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name" required>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" form="topic-form" class="form-control" placeholder="Description"></textarea>
                </div>
            </div>
            <div class="container-controls">
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
